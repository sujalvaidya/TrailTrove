<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Hiking Trails</h1>
    <div class="col-6 offset-3">
        <form action="/hikingTrails/<%= hikingTrail._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hikingTrail[title]"
                       value="<%= hikingTrail.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hikingTrail[location]"
                       value="<%= hikingTrail.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="hikingTrail[image]"
                       value="<%= hikingTrail.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Hiking Trail Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#8377;</span>
                    <input type="text" class="form-control" id="price" placeholder="0" aria-label="price-label"
                           aria-describedby="price-label" name="hikingTrail[price]" value="<%= hikingTrail.price %>">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="hikingTrail[description]">
                    <%= hikingTrail.description %>
                </textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Hiking Trail</button>
            </div>
        </form>
        <a href="/hikingTrails/<%= hikingTrail._id %>">Back to Hiking Trail</a>

    </div>
</div>