<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Hiking Trails</h1>
    <div class="col-6 offset-3">
        <form action="/hikingTrails" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hikingTrail[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hikingTrail[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="hikingTrail[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Hiking Trail Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&#8377;</span>
                    <input type="text" class="form-control" id="price" placeholder="0" aria-label="price-label"
                           aria-describedby="price-label" name="hikingTrail[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="hikingTrail[description]"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Hiking Trail</button>
            </div>
        </form>
        <a href="/hikingTrails">All Hiking Trails</a>
    </div>
</div>